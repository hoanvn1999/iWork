<%= link_to homepage_path(id: job.id) do %>
  <div class="col-md-4 card project-wrap p-3 mb-0 border-0">
    <%= image_tag job.job_image, class:"card-img-top img" %>
    <div class="card-body">
      <h5 class="card-title"><%= job.title %></h5>
      <p class="card-text"><span class="font-weight-bold"><%= t "job.salary" %>: </span> <%= t("price", price: exchange_money(job.salary)) %></p>
      <p class="card-text"><span class="font-weight-bold"><%= t "job.date" %>: </span> <%= l(job.date,format: :notime) %></p>
      <p class="card-text"><span class="font-weight-bold"><%= t "job.quantity" %>: </span><%= job.number_of_staffs %></p>
      <div class="text-center"><%= link_to t("btn.apply"), "#", class: "btn btn-primary" %></div>
    </div>
  </div>
<% end %>
