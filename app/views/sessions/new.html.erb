<section class="bg-gradient-primary js-fullheight">
  <div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">
      <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
              <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
              <div class="col-lg-6">
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4"><%= t "menu_list.login" %></h1>
                  </div>
                  <%= form_for :session, url: login_path do |f| %>
                    <div class="signin-form">
                      <div class="form-group">
                        <%= f.email_field :email, class: "form-control form-control-user", placeholder: "#{t("login.username")}", required: true %>
                      </div>
                      <div class="form-group">
                        <%= f.password_field :password, class: "form-control form-control-user", placeholder: "#{t("login.passwd")}", required: true %>
                        <span class="toggle-password" toggle="#session_password"><i class="eye-pic fa fa-fw fa-eye field-icon"></i></span>
                      </div>
                      <div class="form-group">
                        <%= f.submit t("menu_list.login"), class: "btn btn-primary btn-user btn-block" %>
                      </div>
                      <div class="form-group d-md-flex">
                        <div class="w-50">
                          <label class="checkbox-wrap checkbox-primary"><%= t "login.remember_me" %>
                            <%= f.check_box :remember_me %>
                            <span class="checkmark"></span>
                          </label>
                        </div>
                      </div>
                    </div>
                  <% end %>

                  <hr>
                  <div class="text-center">
                    <%= link_to t("login.forgot_passwd"), new_password_reset_path, class:"small" %>
                  </div>
                  <div class="text-center">
                    <%= link_to t("menu_list.register"), new_users_path, class:"small" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
