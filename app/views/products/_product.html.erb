<tr>
  <td><%= image_tag product.product_image, class:"rounded-circle img-job" %></td>
  <td><%= product.category.name %></td>
  <td><%= product.name %></td>
  <td><%= product.quantity %></td>
  <td><%= t("price", price: exchange_money(product.price)) %></td>
  <td>
    <button class="btn btn-warning">Sửa</button>
    <button class="btn btn-danger">Xóa</button>
  </td>
</tr>
