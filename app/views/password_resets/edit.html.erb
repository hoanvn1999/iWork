<section class="bg-gradient-primary js-fullheight">
  <div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">
      <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
              <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
              <div class="col-lg-6">
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4"><%= t "login.forgot_passwd" %></h1>
                  </div>
                  <%= form_for @user, url: password_reset_path do |f| %>
                    <div class="signin-form">
                      <%= hidden_field_tag :email, @user.email %>
                      <div class="form-group">
                        <%= f.password_field :password, class: "form-control", placeholder: "#{t("login.passwd")}" %>
                        <span class="toggle-password" toggle="#user_password"><i class="eye-pic fa fa-fw fa-eye field-icon"></i></span>
                      </div>
                      <div class="form-group">
                        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "#{t("register.passwd_conf")}" %>
                        <span class="toggle-password" toggle="#user_password_confirmation"><i class="eye-pic fa fa-fw fa-eye field-icon"></i></span>
                      </div>
                      <div class="form-group">
                        <%= f.submit t("update.update_passwd"), class: "form-control btn btn-primary submit px-3" %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
