<tr>
  <td><%= image_tag invoice.product.product_image, class:"rounded-circle img-job" %></td>
  <td><%= invoice.product.category.name %></td>
  <td><%= invoice.product.name %></td>
  <td><%= invoice.quantity %></td>
  <td><%= t("price", price: exchange_money(invoice.current_price)) %></td>
  <td><%= t("price", price: (exchange_money(invoice.current_price)*invoice.quantity)) %></td>
  <td>
    <button class="btn btn-warning">Sửa</button>
    <button class="btn btn-danger">Xóa</button>
  </td>
</tr>
